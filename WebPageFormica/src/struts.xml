<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
<!-- ustawienie aby końcówka url była .html -->
<constant name="struts.action.extension" value="html"/>
<!-- ustawienie pliku message służący do zapisywania tekstu i odnalezienie go na podstawie klucz-wartość-->
<constant name="struts.custom.i18n.resources" value="message"/>
	<!-- paczka podstawowa służąca do skakania po poszczególnych stronach -->
	<package name="default" extends="struts-default">
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		<!-- konfiguracja akcji, jeśli nazwa akcji zawiera *Link to kieruje do odpowiedniej stronki
		method={1} oznacza nazwę metody, która ma być odpalona(konfiguracja w DefaultAction)
		
		 -->
		<action name="*Link" method="{1}" class="pl.net.formica.DefaultAction">
			<result name="welcome" type="tiles">welcome</result>
			<result name="friends" type="tiles">friends</result>
			<result name="office" type="tiles">office</result>
			
		</action>
		<action name="dupaLink" class="pl.net.formica.ActionFirst">
			<result name="success" type="tiles">dupa</result>
		</action>
		
		
	</package>
</struts>